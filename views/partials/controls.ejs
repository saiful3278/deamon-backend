<div class="toolbar">
  <div class="group">
    <button class="btn" data-action="back" title="Back">◀</button>
    <button class="btn" data-action="home" title="Home">●</button>
    <button class="btn" data-action="recents" title="Recents">■</button>
  </div>
  <div class="group">
    <button class="btn" data-action="vol-down" title="Vol -">🔉</button>
    <button class="btn" data-action="vol-up" title="Vol +">🔊</button>
    <button class="btn" data-action="power" title="Power">⚡</button>
  </div>
  <div class="group">
    <button class="btn" data-action="rotate" title="Rotate">↻</button>
    <button class="btn" data-action="keyboard" title="Keyboard">⌨</button>
    <button class="btn" data-action="fullscreen" title="Fullscreen">⛶</button>
    <button class="btn primary" data-action="screenshot" title="Screenshot">📸</button>
  </div>
  <div class="group">
    <select class="select" data-action="quality" title="Quality">
      <option value="480">SD</option>
      <option value="720" selected>HD</option>
      <option value="1080">FHD</option>
    </select>
    <select class="select" data-action="mode" title="Mode">
      <option value="fmp4">MP4</option>
      <option value="annexb">H264</option>
    </select>
  </div>
</div>
